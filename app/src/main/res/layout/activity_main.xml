<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10sp"
    android:background="@color/blue"
    tools:context=".acyivity.MainActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:padding="10dp"
        android:textColor="@color/colorPrimary"
        android:text="Pilih Kategori"
        android:textSize="25sp"
        android:layout_weight="0.04" />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_satu"
        android:layout_width="143dp"
        android:layout_height="150dp"
        android:src="@drawable/shiroh"
        app:civ_border_color="#FF000000"
        app:civ_border_width="2dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_iman"
        android:layout_width="149dp"
        android:layout_height="150dp"
        android:src="@drawable/doa"
        android:layout_below="@+id/image_islam"
        android:layout_alignRight="@+id/image_satu"
        android:layout_alignEnd="@+id/image_satu"
        android:layout_marginTop="14dp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_islam"
        android:layout_width="144dp"
        android:layout_height="150dp"
        android:src="@drawable/malaikat"
        android:layout_below="@+id/image_satu"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp" />

</RelativeLayout>
